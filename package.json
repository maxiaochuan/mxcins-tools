{
  "name": "@mxcins/tools",
  "version": "3.0.0-alpha.0",
  "description": "tools",
  "homepage": "https://github.com/maxiaochuan/mxcins-tools",
  "bugs": {
    "url": "https://github.com/maxiaochuan/mxcins-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maxiaochuan/mxcins-tools"
  },
  "license": "MIT",
  "files": [
    "lib",
    "bin",
    "src/types.d.ts"
  ],
  "types": "src/types.d.ts",
  "bin": {
    "mtools": "./bin/mxcins-tools.js",
    "mxcins-tools": "./bin/mxcins-tools.js"
  },
  "scripts": {
    "build": "babel src --out-dir lib -x .ts",
    "lint": "yarn lint:ts",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --fix --ext .js",
    "lint-staged:ts": "tslint --fix",
    "lint:ts": "tslint --fix \"src/**/*.ts*\"",
    "prepublishOnly": "np --no-cleanup --yolo --no-publish",
    "prettier": "prettier --write \"./src/**/*\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,less}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx}": "yarn lint-staged:ts"
  },
  "dependencies": {
    "@babel/core": "7.4.3",
    "@babel/plugin-proposal-class-properties": "7.4.0",
    "@babel/plugin-proposal-export-default-from": "7.2.0",
    "@babel/plugin-transform-runtime": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@babel/register": "7.4.0",
    "@types/prettier": "^1.16.1",
    "prettier": "^1.16.4",
    "rollup": "^1.8.0",
    "signale": "^1.4.0",
    "typescript": "^3.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@types/assert": "^1.4.2",
    "@types/signale": "^1.2.1",
    "assert": "^1.4.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "yargs-parser": "^13.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "authors": [
    "XiaochuanMa <mxcins@gmail.com> (https://github.com/maxiaochuan)"
  ]
